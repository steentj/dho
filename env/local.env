# Local Development Environment
ENVIRONMENT=local

# Database
POSTGRES_HOST=postgres                   # værtsadgang til postgres (host-port 5433)
POSTGRES_USER=steen
POSTGRES_PASSWORD=<pasord>
POSTGRES_PORT=5433                        # matcher docker-compose.base.yml port map
POSTGRES_DB=WW2
DATABASE_URL=postgresql://steen:<pasord>@postgres:5433/WW

# Embeddings (vælg provider pr. kørsel)
PROVIDER=openai
OPENAI_API_KEY=<key>
OPENAI_MODEL=text-embedding-3-small
# PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=nomic-embed-text
# PROVIDER=dummy

# Processing
CHUNK_SIZE=500
CHUNKING_STRATEGY=sentence_splitter
# Alternative strategies:
# CHUNKING_STRATEGY=word_overlap
URL_FILE=test_input.txt
LOG_DIR=./logs

# Search API
TILLADTE_KALDERE=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
DISTANCE_THRESHOLD=0.5

# Misc
DATABASE_TYPE=postgresql
LOG_LEVEL=DEBUG
LOG_FORMAT=plain
