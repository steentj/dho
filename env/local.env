# Local Development Environment
ENVIRONMENT=local

# Database
POSTGRES_HOST=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_change_me
POSTGRES_PORT=5432
POSTGRES_DB=dhodb_dev

# Embeddings (default local often uses Ollama)
PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text
# Optionally keep OpenAI vars blank or commented to prevent accidental use
# OPENAI_API_KEY=
# OPENAI_MODEL=text-embedding-3-small

# Processing
CHUNK_SIZE=500
CHUNKING_STRATEGY=sentence_splitter
# Alternative strategies:
# CHUNKING_STRATEGY=word_overlap
URL_FILE=test_input.txt
LOG_DIR=./logs

# Search API
TILLADTE_KALDERE=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
DISTANCE_THRESHOLD=0.5

# Misc
DATABASE_TYPE=postgresql
LOG_LEVEL=DEBUG
LOG_FORMAT=plain
