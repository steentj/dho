# Production Environment
ENVIRONMENT=production

# Database (services bruger docker-netværket)
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_PORT=5432
POSTGRES_DB=dhodb
DATABASE_URL=postgresql://postgres:REPLACE_WITH_SECURE_PASSWORD@postgres:5432/dhodb

# Embeddings (vælg gældende provider)
PROVIDER=openai
OPENAI_API_KEY=REPLACE_WITH_OPENAI_KEY
OPENAI_MODEL=text-embedding-3-small
# PROVIDER=ollama
# OLLAMA_BASE_URL=http://ollama:11434
# OLLAMA_MODEL=nomic-embed-text
# PROVIDER=dummy                      # forbudt i produktion; behold som reference

# Processing
CHUNK_SIZE=500
CHUNKING_STRATEGY=sentence_splitter
# Alternative strategies:
# CHUNKING_STRATEGY=word_overlap
URL_FILE=test_input.txt
LOG_DIR=./logs

# Search API
TILLADTE_KALDERE=https://yourdomain.example,http://localhost:8080
DISTANCE_THRESHOLD=0.5

# Misc
DATABASE_TYPE=postgresql
LOG_LEVEL=INFO
LOG_FORMAT=json
