# Environment configuration template for book processing
# Copy this to .env and fill in your values

# Database configuration
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost  # Use "postgres" for Docker

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=text-embedding-3-small

# Processing configuration
PROVIDER=openai  # or "dummy" for testing
CHUNK_SIZE=500
URL_FILE=test_input.txt

# Logging configuration
LOG_DIR=./logs  # Directory for log files - both scripts will use this
